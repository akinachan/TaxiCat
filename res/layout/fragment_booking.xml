<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tomatocat.taxicat.MainActivity$PlaceholderFragment" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/lblSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name" />

            <EditText
                android:id="@+id/txtSenderName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="e.g Angela Grace Sadeli"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/lblPetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet" />

            <EditText
                android:id="@+id/txtPetName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="e.g Cookies"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/lblSenderPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone" />

            <EditText
                android:id="@+id/txtSenderPhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="e.g +628182602882"
                android:inputType="text" />
        </TableRow>

        <TableRow android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/lblPAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick-up Addr" />

            <EditText
                android:id="@+id/txtPAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="e.g Jl. Hang Lekir No. 1"
                android:inputType="textPostalAddress" />
        </TableRow>

        <TableRow android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/lblPTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick-up Time" />

            <EditText
                android:id="@+id/txtPTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="e.g 26/09/2014 12:00"
                android:inputType="datetime" />
        </TableRow>

        <TableRow android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/lblDAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination" />

            <EditText
                android:id="@+id/txtDAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="e.g Jl. Senopati No. 3"
                android:inputType="textPostalAddress" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/lblContactPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact" />

            <EditText
                android:id="@+id/txtContactPhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="e.g +628182602882"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/btnBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
         
                android:layout_span="2"
                android:text="Book" />
        </TableRow>
    </TableLayout>

</ScrollView>